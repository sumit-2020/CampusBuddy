<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="262dp"
    android:id="@+id/card"
    android:paddingBottom="5dp"
    android:paddingTop="5dp"
    card_view:cardCornerRadius="8dp">


    <RelativeLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <!--<ImageView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="82dp"-->
        <!--android:layout_toStartOf="@+id/postmessage"-->
        <!--android:layout_toLeftOf="@+id/postmessage"-->
        <!--android:layout_alignParentTop="true"-->
        <!--android:id="@+id/iconfbpage"/>-->
        <TextView
            android:id="@+id/fbpagename"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:textSize="30dp"
            android:textColor="#000077"
            android:layout_marginRight="67dp"
            android:layout_marginEnd="67dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/fbpostpic"
            android:textColor="#000000"
            android:id="@+id/postmessage"
            android:layout_below="@+id/fbpagename"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>



</android.support.v7.widget.CardView>