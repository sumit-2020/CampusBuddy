<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null">
<RelativeLayout
    android:id="@+id/rel"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2dp"
    android:background="#ffffff">
    <!--<ImageView-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="82dp"-->
    <!--android:layout_toStartOf="@+id/postmessage"-->
    <!--android:layout_toLeftOf="@+id/postmessage"-->
    <!--android:layout_alignParentTop="true"-->
    <!--android:id="@+id/iconfbpage"/>-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:id="@+id/iconandname">
        <com.etsy.android.grid.util.DynamicHeightImageView
            android:id="@+id/fbpostpicicon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_alignBottom="@+id/postmessage"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            />
    <TextView
        android:id="@+id/fbpagename"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textColor="#000000"
        android:textSize="24dp"
        />
    </LinearLayout>

    <com.etsy.android.grid.util.DynamicHeightTextView
        android:id="@+id/postmessage"
        android:layout_marginBottom="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/iconandname"
        android:textColor="#000000"
        />

    <com.etsy.android.grid.util.DynamicHeightImageView
        android:id="@+id/fbpostpic"
        android:layout_marginTop="4dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@id/postmessage"/>
</RelativeLayout>
</RelativeLayout>
</LinearLayout>

